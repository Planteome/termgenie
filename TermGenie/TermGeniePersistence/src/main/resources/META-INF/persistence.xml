<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    version="1.0">
     <persistence-unit name="derby" transaction-type="RESOURCE_LOCAL">
    	<provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
    	<class>org.bbop.termgenie.ontology.entities.OntologyIdInfo</class>
        <properties>
        	<property name="openjpa.jdbc.DBDictionary" value="derby"/>
        	<property name="openjpa.Log" value="log4j"/>
            <property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema"/>
        </properties>
    </persistence-unit>
    <persistence-unit name="hslqdb" transaction-type="RESOURCE_LOCAL">
    	<provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
    	<class>org.bbop.termgenie.ontology.entities.OntologyIdInfo</class>
        <properties>
        	<property name="openjpa.jdbc.DBDictionary" value="hsql"/>
        	<property name="openjpa.Log" value="log4j"/>
            <property name="openjpa.ConnectionUserName" value="sa"/>
      		<property name="openjpa.ConnectionPassword" value=""/>
      		<property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema"/>
        </properties>
    </persistence-unit>
    <persistence-unit name="h2" transaction-type="RESOURCE_LOCAL">
    	<provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
    	<class>org.bbop.termgenie.ontology.entities.OntologyIdInfo</class>
        <properties>
        	<property name="openjpa.jdbc.DBDictionary" value="org.apache.openjpa.jdbc.sql.H2Dictionary"/>
        	<property name="openjpa.Log" value="log4j"/>
            <property name="openjpa.ConnectionUserName" value="sa"/>
      		<property name="openjpa.ConnectionPassword" value=""/>
      		<property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema"/>
        </properties>
    </persistence-unit>
    <!--  sqlite is not officially supported by openjpa, but seems to work -->
    <persistence-unit name="sqlite" transaction-type="RESOURCE_LOCAL">
    	<provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
    	<class>org.bbop.termgenie.ontology.entities.OntologyIdInfo</class>
        <properties>
        	<property name="openjpa.Log" value="log4j"/>
            <property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema"/>
        </properties>
    </persistence-unit>
</persistence>