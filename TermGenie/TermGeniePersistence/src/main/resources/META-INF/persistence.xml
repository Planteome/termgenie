<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    version="1.0">
    <persistence-unit name="hslqdb-default" transaction-type="RESOURCE_LOCAL">
    	<provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
    	<class>org.bbop.termgenie.ontology.entities.CommitedOntologyTerm</class>
    	<class>org.bbop.termgenie.ontology.entities.SimpleCommitedOntologyTerm</class>
    	<class>org.bbop.termgenie.ontology.entities.CommitHistory</class>
    	<class>org.bbop.termgenie.ontology.entities.CommitHistoryItem</class>
        <properties>
        	<property name="openjpa.jdbc.DBDictionary" value="hsql"/>
        	<property name="openjpa.Log" value="log4j"/>
            <property name="openjpa.ConnectionUserName" value="sa"/>
      		<property name="openjpa.ConnectionPassword" value=""/>
      		<property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema"/>
        </properties>
    </persistence-unit>
    <persistence-unit name="hslqdb-ids" transaction-type="RESOURCE_LOCAL">
