<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>

 <session-config>  <!--  10 minutes -->
   <!-- 
   <session-timeout>10</session-timeout> -->
 </session-config>

 <servlet>
   <servlet-name>GenerateTermsServlet</servlet-name>
   <servlet-class>org.bbop.termgenie.servlets.GenerateTermsServlet</servlet-class>
 </servlet>
 <servlet>
   <servlet-name>OntologyServlet</servlet-name>
   <servlet-class>org.bbop.termgenie.servlets.OntologyServlet</servlet-class>
 </servlet>
 <servlet>
   <servlet-name>ValidateUserCredentialServlet</servlet-name>
   <servlet-class>org.bbop.termgenie.servlets.ValidateUserCredentialServlet</servlet-class>
 </servlet>

 <servlet-mapping>
   <servlet-name>GenerateTermsServlet</servlet-name>
   <url-pattern>/generate</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
   <servlet-name>OntologyServlet</servlet-name>
   <url-pattern>/ontology</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
   <servlet-name>ValidateUserCredentialServlet</servlet-name>
   <url-pattern>/user</url-pattern>
 </servlet-mapping>

 <welcome-file-list>
   <welcome-file>TermGenie.html</welcome-file>
 </welcome-file-list>

</web-app>